{
  "name": "rawa7el",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "dev:bedaya": "turbo dev --filter=bedaya",
    "dev:taht": "turbo dev --filter=taht-el-eshreen",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:all": "pnpm test && pnpm test:e2e",
    "db:generate": "pnpm --filter @rawa7el/database db:generate",
    "db:push": "pnpm --filter @rawa7el/database db:push",
    "db:studio": "pnpm --filter @rawa7el/database db:studio"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^20",
    "@vitest/coverage-v8": "^4.0.16",
    "jsdom": "^27.4.0",
    "turbo": "^2.3.0",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@9.15.0"
}
